<body>

  <nav>
    <div id="nav-logo">
      <a href="/">
      <img src="/android-chrome-192x192.png" alt="Brand Logo of Read Better">
      </a>
    </div>
    <div id="nav-container">
      <div class="nav-links">
        <div id="menu-bar" onclick="onClickMenu()">
          <div id="bar1" class="bar"></div>
          <div id="bar2" class="bar"></div>
          <div id="bar3" class="bar"></div>
        </div>
        <div>
        <ul class="nav" id="nav">
          <li><a href="#Home">Home</a></li>
          <li><a href="/books">All Books</a></li>
          <!-- <li><a href="#WhyUs">Why Us</a></li>
          <li><a href="#Portfolio">Portfolio</a></li> -->
          <li><a href="#Contact">Contact</a></li>
        </ul>
        </div>
      </div> 
      <div class="menu-bg" id="menu-bg"></div>
    </div>
  </nav>

  <header id=Home>
    <h1>Here are the the people who recommended by <%= book.bookName %></h1>
    <br>
    <h4>Here is the list of people who have recommended <%= book.bookName %> along with complete details.</h4>
  </header>

  <main>
    <section id="book-box">
      <a href="<%= book.amazonLink %>" target="_blank">
      <div id="book-img-box">
        <img class="book-img" src="<%= book.bookImgPath %>" alt="Picture of the book <%= book.bookName %> by <%= book.bookAuthor %>">
        <img class="buy-amazon-img" src="\images\amazon-buy-now-button-png-parallel-3586x852.png" alt="Buy on Amazon Image">
      </div>
      </a>
    <h1><%= book.bookName %></h1>
      <h2><%= book.bookAuthor %></h2>
      <br>
      <p><%- book.bookDesc %></p>
      <% book.bookTags.forEach(function(dat){ %>
      <p><%= dat %></p>
      <% }); %>
    </section>
    <section id="leaders-reco-box">
      <% book.leadersReco.forEach(function(leader){ %>
        <a href="/<%= leader.twitterId %>">
        <div class="leader-box">
        <div class="leader-img-box">
          <img src="<%= leader.leaderImgPath %>" alt="Picture of <%= leader.leaderName %>">
        </div>
        <div class="leader-details">
          <h3><%= leader.leaderName %></h3>
          <%= leader.leaderComment %>
          <%= leader.whereRecommended %>
        </div>
      </div>
      </a>
      <% }); %>
    </section>
  </main>

      <footer></footer>
      
      
