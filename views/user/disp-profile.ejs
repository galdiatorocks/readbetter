  <header id=Home>
    <h1>Here are the books recommended by leaders followed by <%= data.user.twitterHandle %></h1>
    <br>
    <h4>Here is the list of books recommended by leaders followed by <%= data.user.twitterHandle %> along with complete details.</h4>
  </header>
  
  <main>
    <section id="leader-box">
      <div id="leader-img-box">
        <img src="<%= data.user.twitterImageUrl %>" alt="Picture of <%= data.user.twitterImageUrl %> from the field of <%= data.user.twitterId %> ">
      </div>
      <h2><%= data.user.twitterName %></h2>
      <h3>@<%= data.user.twitterHandle %></h3>
      <br>
      <p><%- data.user.twitterBio %></p>
    </section>
    <section id="books-reco-box">
      <% data.books.forEach(function(dat){ %>
      <div class="book-box" id='book-box'>
          <div class="book-image-box">
            <a class= ".book-reco-link" href="<%= dat.bookRBLink %>">
            <img class = "book-img" src="<%= dat.bookImgPath %>" alt="Picture of the book name <%= dat.bookName %>" class="images">
            </a>
            <a href="<%= dat.amazonLink %>" target="_blank">
            <img class= "buy-amazon-img" src = "..\images\amazon-buy-now-button-png-parallel-3586x852.png" alt="Buy on Amazon button">
            </a>
          </div>
          <a class= ".book-reco-link" href="<%= dat.bookRBLink %>">
          <div class = "book-details">
            <h4><%= dat.bookName %></h4>
            <p>by <%= dat.bookAuthor.join(', ') %></p>
            <br>
            <h4><%= dat.bookDesc %></h4>
            <br>
            <p>Tags: <%= dat.bookTags.join(", ") %></p>
            <p>Recommended by <%= dat.recoCount %> leader(s)</p>
          </div>
          </a>
      </div>
      <!-- </a> -->
      <% }); %>
    </section>
  </main>

